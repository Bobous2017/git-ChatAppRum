<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatAppRum.MainPage"
             Title="">
    <Frame  VerticalOptions="Center" HorizontalOptions="Center" Padding="0" BackgroundColor="DarkBlue" CornerRadius="28" IsClippedToBounds="True" Margin="20,200,20,240">
        <ScrollView  BackgroundColor="AliceBlue" Margin="0,-50,0,0" >
        
        <StackLayout >
        
                <!-- Add the logo image here -->
            <Image Source="logo.png"
               HeightRequest="200" 
               WidthRequest="200" 
               Margin="0,20,0,0"
               HorizontalOptions="Center" />

            <Label Text="Chat App"
               FontSize="24"
                   Margin="0,-30,0,0"
               HorizontalOptions="Center" />

            <Button Text="Login with Google"
                x:Name="GoogleLoginButton"
                Clicked="OnGoogleLoginClicked"
                WidthRequest="200"
                Margin="0,40,0,0"
                BackgroundColor="BlanchedAlmond"
                TextColor="Black"
                HorizontalOptions="Center" />


            <Button Text="Logout" 
                    Clicked="OnLogoutClicked" 
                     WidthRequest="200"
                    Margin="0,10,0,0"
                    BackgroundColor="AliceBlue"
                    TextColor="red"/>
        </StackLayout>
        
    </ScrollView>
    </Frame>
</ContentPage>
